{
  "files.insertFinalNewline": true,
  "extensions.autoUpdate": false,
  "eslint.enable": true,
  "editor.rulers": [100],
  "editor.fontSize": 10,
  "javascript.validate.enable": false,
  "workbench.colorTheme": "Solarized Dark",
  "workbench.activityBar.visible": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.sideBar.location": "left",
  "workbench.editor.enablePreview": false,
  "files.trimTrailingWhitespace": true,
  "editor.selectionHighlight": true,
  "editor.selectionClipboard": true,
  // for vim
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-n>"],
      "commands": [":nohl"]
    }
  ],
  "vim.foldfix": true,
  // ##########################################
  //          Transparent setting
  //         need to install wmctrl
  // ##########################################
  "glassit-linux.opacity": 90,
  "ruby.lint": {
    "reek": true,
    "rubocop": true,
    "ruby": true, //Runs ruby -wc
    "fasterer": true,
    "debride": true,
    "ruby-lint": true
  },
  "window.zoomLevel": 1,
  "workbench.tree.indent": 15,
  "explorer.confirmDragAndDrop": false,
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.disableLanguages": ["html"],
  "emmet.includeLanguages": {"django-html": "html"},
  // "files.associations": {
  //     "*.html": "html"
  // },
  "[html]": {
     "editor.formatOnSave": true,
     "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[django-html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // ##########################################
  //                  Python
  // ##########################################
  // Python Venv
  "python.venvPath": ".venv",
  // Python typechecker
  "python.linting.mypyEnabled": true,
  // Python linter
  "python.linting.pylintEnabled": false, // not use pylint
  "python.linting.flake8Enabled": true,
  "python.linting.blackEnabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=120",
    "--max-complexity",
    "20"
  ],
  "python.linting.lintOnSave": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true // runs Isort automatically upon saving your document
    }
  },
  // "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--aggressive",
    "--aggressive"
  ],
  "python.formatting.provider": "black",
  "workbench.editorAssociations": [],
  "editor.formatOnSave": true
}
