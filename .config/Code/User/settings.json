{
  // ##########################################
  //        Basic
  // ##########################################
  "files.insertFinalNewline": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  "editor.rulers": [
    100
  ],
  "workbench.activityBar.visible": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.sideBar.location": "left",
  "workbench.editor.enablePreview": false,
  "workbench.colorTheme": "Monokai",
  "files.trimTrailingWhitespace": true,
  "editor.selectionHighlight": true,
  "editor.selectionClipboard": true,
  "editor.fontSize": 10,
  "emmet.triggerExpansionOnTab": false, // https://stackoverflow.com/questions/35519538/visual-studio-code-tab-key-does-not-insert-a-tab
  "security.workspace.trust.untrustedFiles": "newWindow",
  // ##########################################
  //        Terminal
  // ##########################################
  "editor.accessibilitySupport": "off",
  "workbench.editor.untitled.hint": "hidden",
  "terminal.integrated.fontFamily": "'Hack Nerd Font'",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "editor.renderControlCharacters": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  // ##########################################
  //         disable ALT
  // https://stackoverflow.com/questions/48044429/override-alt-to-toggle-menu-bar-on-vs-code
  // ##########################################
  "window.titleBarStyle": "custom",
  "window.customMenuBarAltFocus": false,
  "window.enableMenuBarMnemonics": false,
  // ##########################################
  //         VIM
  // ##########################################
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<C-n>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    // https://github.com/VSCodeVim/Vim/issues/2903
    {
      "before": [
        ":",
        "W"
      ],
      "commands": [
        ":w"
      ]
    },
    {
      "before": [
        ":",
        "Q"
      ],
      "commands": [
        ":q"
      ]
    }
  ],
  "vim.foldfix": true,
  // ##########################################
  //          Transparent setting
  //         need to install wmctrl
  // ##########################################
  "glassit-linux.opacity": 90,
  // ##########################################
  //         Ruby
  // ##########################################
  "ruby.lint": {
    "reek": true,
    "rubocop": true,
    "ruby": true, //Runs ruby -wc
    "fasterer": true,
    "debride": true,
    "ruby-lint": true
  },
  "workbench.tree.indent": 15,
  "explorer.confirmDragAndDrop": false,
  // ##########################################
  //         MD
  // ##########################################
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  // ##########################################
  //         JS
  // ##########################################
  "javascript.validate.enable": false,
  "eslint.enable": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "files.associations": {
  //     "*.html": "html"
  // },
  // ##########################################
  //                  JSON
  // ##########################################
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // ##########################################
  //                  HTML CSS
  // ##########################################
  "beautify.language": {
    "css": [
      "css",
      "scss"
    ],
    "html": [
      "htm",
      "html",
      "php"
    ]
    // ^^ providing just an array sets the VS Code file type
  },
  "prettier.disableLanguages": [
    "html",
  ],
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[django-html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  // ##########################################
  //                  Python
  // ##########################################
  // Python Venv
  "python.venvPath": ".venv",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true // runs Isort automatically upon saving your document
    }
  },
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=88",
    "--ignore=E203,W503,W504,E501"
  ],
  "python.linting.lintOnSave": true,
  "python.linting.mypyEnabled": true,
  // ##########################################
  //                  Jupyter
  // ##########################################
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
}