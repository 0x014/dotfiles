[
    {
        "key": "ctrl+c",
        "command": "editor.action.clipboardCopyAction",
        "when": "editorTextFocus && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+v",
        "command": "editor.action.clipboardPasteAction",
        "when": "editorTextFocus && !inDebugRepl && vim.mode == 'Insert'"
    },
    // Emacs binding for terminal.
    {
        "key": "ctrl+f",
        "command": "ctrl+f",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+b",
        "command": "ctrl+b",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+e",
        "command": "ctrl+e",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+k",
        "command": "ctrl+k",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+p",
        "command": "ctrl+p",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+n",
        "command": "ctrl+n",
        "when": "terminalFocus"
    },
    // Ctrl-Q is for TWmux in terminal
    {
        "key": "ctrl+q",
        "command": "ctrl+q",
        "when": "terminalFocus"
    },
    // Ctrl-v is for VIm in terminal
    {
        "key": "ctrl+v",
        "command": "ctrl+v",
        "when": "terminalFocus"
    },
    // disable to close terminal by ctrl+j
    {
        "key": "ctrl+j",
        "command": "ctrl+j",
        "when": "terminalFocus"
    },
]
