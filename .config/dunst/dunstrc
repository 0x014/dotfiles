# to test
# killall dunst; notify-send 'title' 'body'

[global]
    font = DejaVu Sans Mono 9

    # Allow a small subset of html markup:
    #   <b>bold</b>
    #   <i>italic</i>
    #   <s>strikethrough</s>
    #   <u>underline</u>
    markup = yes

    #   %a  appname
    #   %s  summary
    #   %b  body
    #   %i  iconname (including its path)
    #   %I  iconname (without its path)
    #   %p  progress value if set ([  0%] to [100%]) or nothing
    format = "<big>%s</big>\n<small>%b</small>"

    # show how many messages are currently hidden
    indicate_hidden = yes

    # sort messages by urgency
    sort = yes

    # text alignment
    alignment = left

    # disabled
    bounce_freq = 0

    # show age of message(sec)
    show_age_threshold = 60

    # split notifications into multiple lines
    word_wrap = yes

    # ignore newlines '\n' in notifications
    ignore_newline = no

    # The geometry of the window:
    # [{width}]x{height}[+/-{x}+/-{y}]
    geometry = "300x5-20+40"

    # range [0 ~ 100]
    transparency = 20

    # shrink window if it's smaller than the width.
    shrink = no

    # Which monitor should the notifications be displayed on.
    monitor = 0

    # don't remove messages, if the user is idle
    idle_threshold = 120

    # display notification on focused monitor
    follow = mouse

    # should a notification popped up from history be sticky or timeout
    # as if it would normally do.
    sticky_history = yes

    # the spacing between lines
    line_height = 0

    # draw a line of "separatpr_height" pixel height between two
    # notifications.
    # Set to 0 to disable.
    separator_height = 2

    # padding between text and separator.
    padding = 6

    horizontal_padding = 6

    # Define a color for the separator.
    # possible values are:
    #  * auto: dunst tries to find a color fitting to the background;
    #  * foreground: use the same color as the foreground;
    #  * frame: use the same color as the frame;
    #  * anything else will be interpreted as a X color.
    separator_color = frame

    # Print a notification on startup.
    startup_notification = true

    # align icons left/right/off
    icon_position = left

    # Draw a line of "separatpr_height" pixel height between two
    # notifications.
    # Set to 0 to disable.
    separator_height = 2


# Solarized dark theme
# copied from https://github.com/khamer/base16-dunst/blob/master/themes/base16-solarized-dark.dunstrc

frame_color = "#93a1a1"
separator_color = "#93a1a1"

[base16_low]
    msg_urgency = low
    background = "#073642"
    foreground = "#657b83"

[base16_normal]
    msg_urgency = normal
    background = "#586e75"
    foreground = "#93a1a1"

[base16_critical]
    msg_urgency = critical
    background = "#dc322f"
    foreground = "#eee8d5"
