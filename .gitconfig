[user]
	name = mgoldchild
	email = mgoldchild@gmail.com
[diff]
	renames = true
[color]
	ui = auto
[alias]
	a = add . --all
	b = branch
	c = commit -m
	d = diff --histogram
	e = blame
	f = fetch
	g = grep -n
	h = push
	i = ls-files
	l = log --graph --date=short --format='%C(yellow)%h%C(reset) %C(magenta)[%ad]%C(reset)%C(red)%d%C(reset) %s %C(cyan)@%an%C(reset)'
	m = merge
	o = checkout
	r = rm
	s = status --short
	t = revert -m 1
	u = pull
	v = mv
	w = show
	x = stash list
	y = stash save
	z = stash apply
[core]
	autoCRLF = false
	safecrlf = true
	excludesfile = ~/.gitignore
	editor = vim
[merge]
	tool = vimdiff
