[user]
	name = mgoldchild
	email = mgoldchild@gmail.com
[diff]
	renames = true
[color]
	ui = auto
[alias]
	a = add . --all
	b = branch --all
	c = commit -m
	d = diff
	e = blame
	f = fetch
	g = grep -n
	i = ls-files
	l = log --graph --date=short --format='%C(yellow)%h%C(reset) %C(magenta)[%ad]%C(reset)%C(red)%d%C(reset) %s %C(cyan)@%an%C(reset)'
	m = merge
	o = checkout
	p = pull
	r = rm
	s = show
	t = status --short --branch
	v = mv
[core]
	autocrlf = input
	safecrlf = true
	excludesfile = ~/.gitignore
  editor = vim
[merge]
  tool = vimdiff
