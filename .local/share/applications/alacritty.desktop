# NOTE: Alacritty x11 mode
# - https://github.com/alacritty/alacritty/issues/1101

[Desktop Entry]
Type=Application
TryExec=alacritty
Exec=zsh -c "env WINIT_UNIX_BACKEND=x11 alacritty"
Icon=Alacritty
Terminal=false
Categories=System;TerminalEmulator;

Name=Alacritty x11
GenericName=Terminal
Comment=A cross-platform, GPU enhanced terminal emulator
StartupWMClass=Alacritty
Actions=New;

[Desktop Action New]
Name=New Terminal
Exec=zsh -c "env WINIT_UNIX_BACKEND=x11 alacritty"
