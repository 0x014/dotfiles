#
# Docker Config
#

alias df="docker info"

# ############################
#  CMD for Dockerfile
# ############################

# build Dockerfile, --no-cache
alias db="docker build"

# ############################
#  CMD for Repository
# ############################

# Docker push to remote repository, REPOSITORY[:tag]
alias dh='docker push'

# Docker pull form remote repository, REPOSITORY[:tag]
alias du='docker pull'

# ############################
#  CMD for Image
# ############################

# Remove all images
alias dm='docker rmi'
alias dma='docker rmi $(docker images --quiet)'

# List images, --all
alias di="docker images"

# Dockerfile command list
alias dy='docker history'

# Make image from container, CONTAINER REPOSITORY[:TAG]
alias dc="docker commit"

# tag alias, CONTAINER REPOSITORY[:tag]
alias dg='docker tag'

# ############################
#  CMD for Containers
# ############################

# remove containers
alias dr="docker rm"
alias dra='docker rm $(docker ps --all --quiet)'

# List containers, -a
alias dp="docker ps"

# docker stop
alias dt="docker stop"

# docker start
alias ds="docker start"

# Show Top
alias do='docker top'

# show diff
alias dd="docker diff"

# show spec
alias dn="docker inspect"
alias dni='docker inspect  --format="{{.NetworkSettings.IPAddress}}"'

# show container events
alias dv="docker events"

# show container log
alias dl="docker logs"

# attach docker containers
alias da="docker attach"

# exec docker container, CONTAINER /bin/bash
alias de="docker exec"
alias deb="docker exec -it"

# ############################
#  CMD for doc
# ############################
#
# how all alias related docker
dalias() { alias | grep 'docker' | sed "s/^\([^=]*\)=\(.*\)/\1 => \2/"| sed "s/['|\']//g" | sort; }

