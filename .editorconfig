root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.coffee]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.less]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.hbs]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md
indent_style = tab
indent_size = 2
