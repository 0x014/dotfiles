root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.css]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.html]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.less]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.hbs]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.xml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.csv]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.sql]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[.*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

